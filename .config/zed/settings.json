{
  "auto_install_extensions": {
    "fish": true,
    "html": true,
    "kanso": true,
    "toml": true,
    "yugen": true
  },
  "buffer_font_family": "Geist Mono",
  "buffer_font_features": { "liga": 0 },
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.45 },
  "format_on_save": "off",
  "git": {
    "inline_blame": { "enabled": false }
  },
  "indent_guides": { "enabled": false },
  "project_panel": {
    "auto_fold_dirs": false,
    "indent_guides": { "show": "never" }
  },
  "show_whitespaces": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "dark": "Kanso Ink (Borderless + No italics)",
    "light": "Kanso Ink (Borderless + No italics)",
    "mode": "system"
  },
  "ui_font_family": "Inter Display",
  "ui_font_size": 16
}
