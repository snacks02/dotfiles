{
  "auto_install_extensions": {
    "fish": true,
    "html": true,
    "intellij-newui-theme": true,
    "ruby": true,
    "toml": true
  },
  "buffer_font_family": "Geist Mono",
  "buffer_font_features": { "liga": 0 },
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.45 },
  "format_on_save": "off",
  "git": {
    "inline_blame": { "enabled": false }
  },
  "indent_guides": { "enabled": false },
  "project_panel": {
    "auto_fold_dirs": false,
    "default_width": 260,
    "indent_guides": { "show": "never" }
  },
  "show_whitespaces": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "dark": "JetBrains New Dark",
    "light": "JetBrains New Dark",
    "mode": "system"
  },
  "title_bar": { "show_sign_in": false },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_family": "Inter Display"
}
